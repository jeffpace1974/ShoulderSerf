# OBS WebSocket Settings
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=your_obs_password_here

# Thumbnail Settings
THUMBNAIL_OUTPUT_DIR=thumbnails
THUMBNAIL_TEMPLATE_BG=assets/background.jpg
THUMBNAIL_AVATAR_LEFT=assets/robot_lady.png
THUMBNAIL_AVATAR_RIGHT=assets/host.png

# Audio Settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHUNK_SIZE=1024
AUDIO_VOICE_THRESHOLD=0.01

# AI Settings (for advanced thumbnail title generation)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO